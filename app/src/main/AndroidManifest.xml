<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.androidtown.seobang_term_project">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/smalllogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="org.androidtown.seobang_term_project"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name=".ui.main.MainActivity" />
        <activity
            android:name=".ui.info.InfoActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.ingredient.IngredientSelectActivity"
            android:launchMode="singleTask" />
        <activity android:name=".ui.tutorial.TutorialActivity" />
        <activity
            android:name=".ui.recipe.RecipeSelectActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".ui.ingredient.RecipeFromIngredientActivity" />
        <activity android:name=".ui.history.HistoryActivity" />
        <activity android:name=".ui.recipe.RecipeActivity" />
        <activity android:name=".ui.recipe.RecipePreviewActivity" />
        <activity android:name=".ui.intro.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.history.HistoryEditActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".ui.history.lastConfirmActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name=".ui.recipe.CameraActivity" />
        <activity
            android:name=".ui.Accuracy.AccuracyActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".ui.recipe.pageFramgnetWarningActivity"
            android:launchMode="singleTask"
            android:theme="@android:style/Theme.Dialog" />
    </application>

</manifest>