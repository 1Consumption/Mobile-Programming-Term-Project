<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.androidtown.seobang_term_project.ui.history.HistoryActivity">

    <LinearLayout
        android:id="@+id/noRecipeLayout_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/sadImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/sad" />

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/noList_recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/md_green_200"
            android:text="아직 먹은 요리가 없어요!"
            android:textColor="@color/black_title"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

    </com.github.mikephil.charting.charts.PieChart>

</RelativeLayout>